@using MudBlazor
@using SmashScheduler.Domain.Entities
@using SmashScheduler.Web.Components

<MudPaper Class="pa-3" Elevation="1">
    <MudStack Spacing="2">
        <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
            <MudText Typo="Typo.h6">On Bench</MudText>
            <MudChip T="string" Color="Color.Info" Size="Size.Small">@BenchedPlayers.Count()</MudChip>
        </MudStack>
        @if (!BenchedPlayers.Any())
        {
            <MudText Typo="Typo.body2" Color="Color.Secondary">No players on bench</MudText>
        }
        else
        {
            <MudStack Spacing="1">
                @foreach (var player in BenchedPlayers)
                {
                    <PlayerCard Player="@player" />
                }
            </MudStack>
        }
    </MudStack>
</MudPaper>

@code {
    [Parameter] public IEnumerable<Player> BenchedPlayers { get; set; } = Enumerable.Empty<Player>();
}
