<div class="skill-badge @GetSkillClass()" title="Skill Level @SkillLevel">
    <span>@SkillLevel</span>
</div>

@code {
    [Parameter] public int SkillLevel { get; set; }
    [Parameter] public Size Size { get; set; } = Size.Small;

    private string GetSkillClass() => SkillLevel switch
    {
        <= 3 => "skill-badge--beginner",
        <= 6 => "skill-badge--intermediate",
        _ => "skill-badge--advanced"
    };
}
