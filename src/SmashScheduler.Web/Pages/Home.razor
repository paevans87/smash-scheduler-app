@page "/"
@using SmashScheduler.Web.Services

@inject IBreadcrumbService BreadcrumbService

<PageTitle>SmashScheduler</PageTitle>

<div class="hero-section">
    
    <MudImage Src="images/icon-192.png" Alt="Smash Scheduler"></MudImage>
    
    <MudText Typo="Typo.h3" Class="hero-title">Smash Scheduler</MudText>
    <MudText Typo="Typo.body1" Class="hero-subtitle">
        Effortless badminton session management and skill-balanced matchmaking
    </MudText>
    <MudButton Href="/clubs"
               Variant="Variant.Filled"
               Color="Color.Primary"
               Size="Size.Large"
               StartIcon="@Icons.Material.Filled.ArrowForward">
        Get Started
    </MudButton>
</div>

<MudGrid Spacing="3">
    <MudItem xs="12" sm="4">
        <MudPaper Class="stat-card" Elevation="2">
            <MudIcon Icon="@Icons.Material.Filled.Groups" Size="Size.Large" Color="Color.Primary" />
            <MudText Typo="Typo.h6" Class="mt-2">Manage Players</MudText>
            <MudText Typo="Typo.body2" Color="Color.Secondary">
                Track skill levels and availability
            </MudText>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" sm="4">
        <MudPaper Class="stat-card" Elevation="2">
            <MudIcon Icon="@Icons.Material.Filled.AutoAwesome" Size="Size.Large" Color="Color.Primary" />
            <MudText Typo="Typo.h6" Class="mt-2">Smart Matchmaking</MudText>
            <MudText Typo="Typo.body2" Color="Color.Secondary">
                Balanced teams based on skill
            </MudText>
        </MudPaper>
    </MudItem>
    <MudItem xs="12" sm="4">
        <MudPaper Class="stat-card" Elevation="2">
            <MudIcon Icon="@Icons.Material.Filled.Timeline" Size="Size.Large" Color="Color.Primary" />
            <MudText Typo="Typo.h6" Class="mt-2">Track Sessions</MudText>
            <MudText Typo="Typo.body2" Color="Color.Secondary">
                From draft to completion
            </MudText>
        </MudPaper>
    </MudItem>
</MudGrid>

@code
{
    protected override void OnInitialized()
    {
        base.OnInitialized();
        BreadcrumbService.SetBreadcrumbs(new List<BreadcrumbItem>());
    }
}
