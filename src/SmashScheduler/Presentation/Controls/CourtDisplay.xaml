<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmashScheduler.Presentation.Controls.CourtDisplay">

    <Frame BackgroundColor="#F8F9FA"
           BorderColor="#E8ECEF"
           CornerRadius="8"
           Padding="12"
           Margin="4"
           HasShadow="False">

        <Grid RowDefinitions="Auto,*" RowSpacing="8">
            <Label Grid.Row="0"
                   Text="{Binding CourtNumber, StringFormat='Court {0}'}"
                   TextColor="#2C3E50"
                   FontSize="15"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <BoxView Grid.Row="1"
                     Color="#3498DB"
                     WidthRequest="80"
                     HeightRequest="120"
                     CornerRadius="4"
                     HorizontalOptions="Center" />
        </Grid>
    </Frame>
</ContentView>
