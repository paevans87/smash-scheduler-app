<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmashScheduler.Presentation.Controls.MatchCard">

    <Frame BackgroundColor="White"
           BorderColor="#2ECC71"
           CornerRadius="12"
           Padding="16"
           Margin="0,8"
           HasShadow="True">

        <Grid RowDefinitions="Auto,Auto" RowSpacing="12">

            <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                <Label Grid.Column="0"
                       Text="{Binding CourtNumber, StringFormat='Court {0}'}"
                       TextColor="#2C3E50"
                       FontSize="18"
                       FontAttributes="Bold" />

                <Button Grid.Column="1"
                        Text="âœ“"
                        TextColor="White"
                        BackgroundColor="#27AE60"
                        WidthRequest="44"
                        HeightRequest="44"
                        CornerRadius="22"
                        Padding="0" />
            </Grid>

            <VerticalStackLayout Grid.Row="1" Spacing="8">
                <Label Text="Players:"
                       TextColor="#7F8C8D"
                       FontSize="13" />

                <CollectionView ItemsSource="{Binding Players}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding Name}"
                                   TextColor="#2C3E50"
                                   FontSize="15"
                                   Margin="0,2" />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </Grid>
    </Frame>
</ContentView>
