<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:SmashScheduler.Presentation.Converters"
             x:Class="SmashScheduler.Presentation.Controls.PlayerCard">

    <ContentView.Resources>
        <converters:SkillLevelToColourConverter x:Key="SkillLevelToColourConverter" />
    </ContentView.Resources>

    <Frame BackgroundColor="White"
           BorderColor="#E8ECEF"
           CornerRadius="12"
           Padding="12,12"
           Margin="0,4"
           HasShadow="True">

        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">

            <Frame Grid.Column="0"
                   WidthRequest="40"
                   HeightRequest="40"
                   CornerRadius="20"
                   Padding="0"
                   BorderColor="Transparent"
                   BackgroundColor="{Binding SkillLevel, Converter={StaticResource SkillLevelToColourConverter}}"
                   HasShadow="False">

                <Label Text="{Binding SkillLevel}"
                       TextColor="White"
                       FontSize="16"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
            </Frame>

            <VerticalStackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                <Label Text="{Binding Name}"
                       TextColor="#2C3E50"
                       FontSize="15"
                       FontAttributes="Bold" />

                <Label TextColor="#7F8C8D"
                       FontSize="13">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="{Binding Gender}" />
                            <Span Text=" â€¢ " />
                            <Span Text="{Binding PlayStylePreference}" />
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </VerticalStackLayout>

            <Image Grid.Column="2"
                   Source="chevron_right.png"
                   WidthRequest="20"
                   HeightRequest="20"
                   VerticalOptions="Center" />
        </Grid>
    </Frame>
</ContentView>
