<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SmashScheduler.Presentation.ViewModels.Analytics"
             x:Class="SmashScheduler.Presentation.Views.Analytics.PlayerAnalyticsPage"
             x:DataType="viewmodels:PlayerAnalyticsViewModel"
             Title="Player Analytics">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="24">

            <Label Text="Player Statistics"
                  TextColor="#2C3E50"
                  FontSize="28"
                  FontAttributes="Bold" />

            <Frame BackgroundColor="White"
                  BorderColor="#E8ECEF"
                  CornerRadius="16"
                  Padding="24"
                  HasShadow="True">

                <Grid RowDefinitions="Auto,Auto" RowSpacing="20">
                    <VerticalStackLayout Grid.Row="0" Spacing="4">
                        <Label Text="Total Games Played"
                              TextColor="#7F8C8D"
                              FontSize="15" />
                        <Label Text="{Binding TotalGamesPlayed}"
                              TextColor="#2C3E50"
                              FontSize="36"
                              FontAttributes="Bold" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Row="1" Spacing="4">
                        <Label Text="Average Play Time"
                              TextColor="#7F8C8D"
                              FontSize="15" />
                        <Label Text="{Binding AveragePlayTime}"
                              TextColor="#27AE60"
                              FontSize="28"
                              FontAttributes="Bold" />
                    </VerticalStackLayout>
                </Grid>
            </Frame>

            <Frame BackgroundColor="#F8F9FA"
                  BorderColor="#E8ECEF"
                  CornerRadius="16"
                  Padding="24"
                  HasShadow="False">

                <VerticalStackLayout Spacing="8">
                    <Label Text="ðŸ“Š Partnership Statistics"
                          TextColor="#7F8C8D"
                          FontSize="15"
                          FontAttributes="Bold" />

                    <Label Text="Coming soon - track your most frequent partners and win rates"
                          TextColor="#7F8C8D"
                          FontSize="13"
                          LineBreakMode="WordWrap" />
                </VerticalStackLayout>
            </Frame>

            <Button Text="Close"
                   Command="{Binding CloseCommand}"
                   BackgroundColor="#3498DB"
                   TextColor="White"
                   CornerRadius="12"
                   Padding="16"
                   FontSize="17"
                   FontAttributes="Bold" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
