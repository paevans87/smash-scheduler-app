<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SmashScheduler.Presentation.ViewModels.Player"
             xmlns:converters="clr-namespace:SmashScheduler.Presentation.Converters"
             x:Class="SmashScheduler.Presentation.Views.Player.PlayerDetailPage"
             x:DataType="viewmodels:PlayerDetailViewModel"
             Title="{Binding Player.Name}">

    <ContentPage.Resources>
        <converters:SkillLevelToColourConverter x:Key="SkillLevelToColourConverter" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="24">

            <VerticalStackLayout HorizontalOptions="Center" Spacing="16">
                <Frame WidthRequest="100"
                      HeightRequest="100"
                      CornerRadius="50"
                      Padding="0"
                      BorderColor="White"
                      BorderWidth="4"
                      BackgroundColor="{Binding Player.SkillLevel, Converter={StaticResource SkillLevelToColourConverter}}"
                      HasShadow="True"
                      HorizontalOptions="Center">

                    <Label Text="{Binding Player.SkillLevel}"
                          TextColor="White"
                          FontSize="36"
                          FontAttributes="Bold"
                          HorizontalOptions="Center"
                          VerticalOptions="Center" />
                </Frame>

                <Label Text="{Binding Player.Name}"
                      TextColor="#2C3E50"
                      FontSize="28"
                      FontAttributes="Bold"
                      HorizontalOptions="Center" />
            </VerticalStackLayout>

            <Frame BackgroundColor="White"
                  BorderColor="#E8ECEF"
                  CornerRadius="16"
                  Padding="16"
                  HasShadow="True">

                <Grid RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="12">
                    <Label Grid.Row="0"
                          Text="Details"
                          TextColor="#2C3E50"
                          FontSize="18"
                          FontAttributes="Bold" />

                    <Grid Grid.Row="1" ColumnDefinitions="*,*" ColumnSpacing="8">
                        <VerticalStackLayout Grid.Column="0" Spacing="4">
                            <Label Text="Skill Level"
                                  TextColor="#7F8C8D"
                                  FontSize="13" />
                            <Label Text="{Binding Player.SkillLevel}"
                                  TextColor="#2C3E50"
                                  FontSize="17"
                                  FontAttributes="Bold" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="1" Spacing="4">
                            <Label Text="Gender"
                                  TextColor="#7F8C8D"
                                  FontSize="13" />
                            <Label Text="{Binding Player.Gender}"
                                  TextColor="#2C3E50"
                                  FontSize="17"
                                  FontAttributes="Bold" />
                        </VerticalStackLayout>
                    </Grid>

                    <VerticalStackLayout Grid.Row="2" Spacing="4">
                        <Label Text="Play Style"
                              TextColor="#7F8C8D"
                              FontSize="13" />
                        <Label Text="{Binding Player.PlayStylePreference}"
                              TextColor="#2C3E50"
                              FontSize="17"
                              FontAttributes="Bold" />
                    </VerticalStackLayout>

                    <Button Grid.Row="3"
                           Text="Edit Player"
                           Command="{Binding NavigateToEditPlayerCommand}"
                           BackgroundColor="Transparent"
                           BorderColor="#2ECC71"
                           BorderWidth="2"
                           TextColor="#2ECC71"
                           CornerRadius="12"
                           Padding="12"
                           Margin="0,8,0,0" />
                </Grid>
            </Frame>

            <Frame BackgroundColor="White"
                  BorderColor="#E8ECEF"
                  CornerRadius="16"
                  Padding="16"
                  HasShadow="True">

                <Grid RowDefinitions="Auto,Auto" RowSpacing="12">
                    <Label Grid.Row="0"
                          Text="Blacklists"
                          TextColor="#2C3E50"
                          FontSize="18"
                          FontAttributes="Bold" />

                    <CollectionView Grid.Row="1"
                                   ItemsSource="{Binding Blacklists}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="*,Auto" Margin="0,8">
                                    <Label Grid.Column="0"
                                          Text="{Binding BlacklistedPlayer.Name}"
                                          TextColor="#2C3E50"
                                          FontSize="15"
                                          VerticalOptions="Center" />

                                    <Button Grid.Column="1"
                                           Text="Ã—"
                                           Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:PlayerDetailViewModel}}, Path=RemoveFromBlacklistCommand}"
                                           CommandParameter="{Binding BlacklistedPlayerId}"
                                           BackgroundColor="#E74C3C"
                                           TextColor="White"
                                           WidthRequest="32"
                                           HeightRequest="32"
                                           CornerRadius="16"
                                           Padding="0"
                                           FontSize="20" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>

                        <CollectionView.EmptyView>
                            <Label Text="No blacklisted players"
                                  TextColor="#7F8C8D"
                                  FontSize="15"
                                  Margin="0,8" />
                        </CollectionView.EmptyView>
                    </CollectionView>
                </Grid>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
