<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SmashScheduler.Presentation.ViewModels.Player"
             xmlns:controls="clr-namespace:SmashScheduler.Presentation.Controls"
             x:Class="SmashScheduler.Presentation.Views.Player.PlayerListPage"
             x:DataType="viewmodels:PlayerListViewModel"
             Title="Players">

    <Grid RowDefinitions="Auto,*,Auto">

        <SearchBar Grid.Row="0"
                  Text="{Binding SearchText}"
                  Placeholder="Search players..."
                  PlaceholderColor="#BDC3C7"
                  TextColor="#2C3E50"
                  BackgroundColor="White"
                  Margin="16,8" />

        <RefreshView Grid.Row="1"
                    IsRefreshing="{Binding IsLoading}"
                    Command="{Binding LoadPlayersCommand}">

            <CollectionView ItemsSource="{Binding Players}"
                           Margin="16,0">

                <CollectionView.EmptyView>
                    <StackLayout Padding="32"
                                VerticalOptions="Center"
                                HorizontalOptions="Center"
                                Spacing="16">

                        <Label Text="ðŸ‘¥"
                              FontSize="64"
                              HorizontalOptions="Center" />

                        <Label Text="Add Your First Player"
                              FontSize="24"
                              FontAttributes="Bold"
                              TextColor="#2C3E50"
                              HorizontalOptions="Center" />

                        <Label Text="Build your club roster to start organising sessions"
                              FontSize="15"
                              TextColor="#7F8C8D"
                              HorizontalOptions="Center"
                              HorizontalTextAlignment="Center" />

                        <Button Text="+ Add Player"
                               Command="{Binding NavigateToCreatePlayerCommand}"
                               BackgroundColor="#2ECC71"
                               TextColor="White"
                               CornerRadius="12"
                               Padding="24,12"
                               HorizontalOptions="Center"
                               Margin="0,16,0,0" />
                    </StackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <controls:PlayerCard>
                            <controls:PlayerCard.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:PlayerListViewModel}}, Path=NavigateToPlayerDetailCommand}"
                                                     CommandParameter="{Binding Id}" />
                            </controls:PlayerCard.GestureRecognizers>
                        </controls:PlayerCard>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <Button Grid.Row="2"
               Text="+ Add Player"
               Command="{Binding NavigateToCreatePlayerCommand}"
               BackgroundColor="#2ECC71"
               TextColor="White"
               CornerRadius="12"
               Padding="16"
               Margin="16"
               FontSize="17"
               FontAttributes="Bold" />
    </Grid>
</ContentPage>
