<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:SmashScheduler.Presentation.ViewModels.Session"
             xmlns:converters="clr-namespace:SmashScheduler.Presentation.Converters"
             x:Class="SmashScheduler.Presentation.Views.Session.SessionListPage"
             x:DataType="viewmodels:SessionListViewModel"
             Title="Sessions">

    <ContentPage.Resources>
        <converters:SessionStateToColourConverter x:Key="SessionStateToColourConverter" />
    </ContentPage.Resources>

    <Grid RowDefinitions="*,Auto">

        <RefreshView Grid.Row="0"
                    IsRefreshing="{Binding IsLoading}"
                    Command="{Binding LoadSessionsCommand}">

            <CollectionView ItemsSource="{Binding Sessions}"
                           Margin="16,8">

                <CollectionView.EmptyView>
                    <StackLayout Padding="32"
                                VerticalOptions="Center"
                                HorizontalOptions="Center"
                                Spacing="16">

                        <Label Text="ðŸ“…"
                              FontSize="64"
                              HorizontalOptions="Center" />

                        <Label Text="No Sessions Yet"
                              FontSize="24"
                              FontAttributes="Bold"
                              TextColor="#2C3E50"
                              HorizontalOptions="Center" />

                        <Label Text="Create your first session to start matchmaking"
                              FontSize="15"
                              TextColor="#7F8C8D"
                              HorizontalOptions="Center"
                              HorizontalTextAlignment="Center" />

                        <Button Text="+ New Session"
                               Command="{Binding NavigateToCreateSessionCommand}"
                               BackgroundColor="#3498DB"
                               TextColor="White"
                               CornerRadius="12"
                               Padding="24,12"
                               HorizontalOptions="Center"
                               Margin="0,16,0,0" />
                    </StackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White"
                              BorderColor="#E8ECEF"
                              CornerRadius="16"
                              Padding="16"
                              Margin="0,8"
                              HasShadow="True">

                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SessionListViewModel}}, Path=NavigateToSessionDetailCommand}"
                                                     CommandParameter="{Binding Id}" />
                            </Frame.GestureRecognizers>

                            <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="8">
                                <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                    <Label Grid.Column="0"
                                          Text="{Binding ScheduledDateTime, StringFormat='{0:dddd, dd MMMM}'}"
                                          TextColor="#2C3E50"
                                          FontSize="18"
                                          FontAttributes="Bold" />

                                    <Frame Grid.Column="1"
                                          BackgroundColor="{Binding State, Converter={StaticResource SessionStateToColourConverter}}"
                                          Padding="8,4"
                                          CornerRadius="12"
                                          HasShadow="False"
                                          BorderColor="Transparent">
                                        <Label Text="{Binding State}"
                                              TextColor="White"
                                              FontSize="12"
                                              FontAttributes="Bold" />
                                    </Frame>
                                </Grid>

                                <Label Grid.Row="1"
                                      Text="{Binding ScheduledDateTime, StringFormat='{0:HH:mm}'}"
                                      TextColor="#7F8C8D"
                                      FontSize="15" />

                                <Label Grid.Row="2"
                                      TextColor="#7F8C8D"
                                      FontSize="15">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="{Binding CourtCount}" />
                                            <Span Text=" courts â€¢ " />
                                            <Span Text="{Binding SessionPlayers.Count}" />
                                            <Span Text=" players" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <Button Grid.Row="1"
               Text="+ New Session"
               Command="{Binding NavigateToCreateSessionCommand}"
               BackgroundColor="#3498DB"
               TextColor="White"
               CornerRadius="12"
               Padding="16"
               Margin="16"
               FontSize="17"
               FontAttributes="Bold" />
    </Grid>
</ContentPage>
